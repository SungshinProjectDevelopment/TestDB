<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/minelistitem_posttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="포스트제목"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/minelistitem_restaurantname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/minelistitem_posttitle"
        android:layout_toEndOf="@+id/minelistitem_posttitle"
        android:paddingLeft="5dp"
        android:text="식당이름" />

    <TextView
        android:id="@+id/minelistitem_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="별점" />

    <TextView
        android:id="@+id/minelistitem_hits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="조회수" />

    <TextView
        android:id="@+id/minelistitem_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="글쓴이" />

    <TextView
        android:id="@+id/minelistitem_postbody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="글 내용일부" />

</RelativeLayout>
